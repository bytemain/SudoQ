<!--BigButtons-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:gravity="center_vertical"
android:layout_width="wrap_content"
android:layout_height="fill_parent"
android:paddingTop="5dp">

<de.sudoq.view.SquareImageButton
    android:id="@+id/button_sudoku_help"
    android:padding="7dp"
    android:scaleType="fitXY"
    android:layout_width="1dp"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:layout_margin="0dp"
    android:onClick="onClick"
    android:src="@drawable/help" />

<de.sudoq.view.SquareImageButton
    android:id="@+id/button_sudoku_actionTree"
    android:padding="7dp"
    android:scaleType="fitXY"
    android:layout_width="1dp"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:layout_margin="0dp"
    android:onClick="onClick"
    android:src="@drawable/action_tree" />

<de.sudoq.view.SquareImageButton
    android:id="@+id/button_sudoku_fill_candidates"
    android:padding="7dp"
    android:scaleType="fitXY"
    android:layout_width="1dp"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:layout_margin="0dp"
    android:onClick="onClick"
    android:src="@drawable/help"
    android:contentDescription="@string/sf_sudoku_button_fill_candidates" />
</LinearLayout>