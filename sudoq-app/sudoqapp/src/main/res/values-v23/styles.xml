<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles for Android 6.0 (API 23) and above -->
    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#00695c</item>
        <item name="colorPrimaryDark">#004d40</item>
        <item name="colorAccent">#7c6354</item>
        <item name="android:windowBackground">@color/window_background</item>
        <!-- Enable translucent status bar for fitsSystemWindows to work properly -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Prevent edge-to-edge layout that causes UI to go under status bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#004d40</item>
        <!-- Use light icons (white) on dark status bar background - only works on API 23+ -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
